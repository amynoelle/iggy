PACKAGE = 'structured_segmentation'

import roslib
roslib.load_manifest(PACKAGE)

from dynamic_reconfigure.parameter_generator import *
gen = ParameterGenerator()

gen.add("mingraddist", double_t, 0, "Minimum distance for gradient calculation", 0.3, 0.0, 1.0)
gen.add("maxgrad", double_t, 0, "Maximum allowable gradient", 0.5, 0.0, 1.0)
gen.add("maxdh", double_t, 0, "Maximum difference in z height allowed", 0.05, 0.0, 1.0)

exit(gen.generate(PACKAGE, "structured_segmentation", "GroundSegmenter"))
